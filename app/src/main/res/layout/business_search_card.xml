<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/business_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/business_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_text_left_right_margin"
            android:layout_marginTop="@dimen/card_text_top_bottom_margin"
            android:layout_marginBottom="@dimen/card_text_top_bottom_margin"
            android:text="@string/business_name"
            android:textSize="28sp"
            tools:layout_marginStart="@dimen/card_text_left_right_margin" />

    </LinearLayout>
</androidx.cardview.widget.CardView>