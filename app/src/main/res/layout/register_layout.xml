<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout_classes.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/motto"
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:layout_marginBottom="295dp"
            android:text="You only plan once"
            android:textAlignment="center"
            android:textColor="#02ABFA"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/client_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <TextView
            android:id="@+id/logo"
            android:layout_width="213dp"
            android:layout_height="78dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="16dp"
            android:text="YOPO"
            android:textAlignment="center"
            android:textColor="#02ACFB"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/motto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/business_button"
            android:layout_width="144dp"
            android:layout_height="61dp"
            android:layout_marginBottom="92dp"
            android:text="Business"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/client_button" />

        <Button
            android:id="@+id/client_button"
            android:layout_width="144dp"
            android:layout_height="61dp"
            android:layout_marginBottom="38dp"
            android:text="Client"
            app:layout_constraintBottom_toTopOf="@+id/business_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/motto" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>